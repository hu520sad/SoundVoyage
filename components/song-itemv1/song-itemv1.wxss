.item{
    display: flex;
    padding: 8rpx 0;
    align-items: center;
}

.image{
    width: 140rpx;
    border-radius: 12rpx;
    margin-top: 10rpx;
}

.content{
    padding: 10rpx 0 10rpx 14rpx;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.info{
    display: flex;
    flex-direction: column;
    height: 100%;
    justify-content: center;
    padding-top: 17rpx;
}

.songName{
    font-size: 32rpx;
    color: #555;
}

.singer{
    padding: 12rpx 0;
    color:#999;
    font-size: 24rpx;
}

.arrow{
    font-size:36rpx;
    color:#888;
}