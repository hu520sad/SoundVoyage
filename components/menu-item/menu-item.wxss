.Menu{
    margin-top:12rpx;
    width: 100%;
}

.album{
    display: flex;
    position: relative;
    border-radius: 12rpx;
    overflow: hidden;    
}

.image{
    width: 100%;
}

.album .playCount{
    position: absolute;
    bottom: 10rpx;
    right: 0;
    color: #fff;
    font-size: 22rpx;
    border-radius: 12rpx;
    padding: 6rpx 10rpx;
    background: rgba(0,0,0, .5);
}

.Menu .info{
    width: 100%;
    font-size: 26rpx;
    margin-top: 6rpx;
    /* 显示两行 */
    white-space: normal;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
