.bg-image,
.bg-cover {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
}

.bg-cover {
    background: rgba(0, 0, 0, 0.3);
    backdrop-filter: blur(20px);
}

.tabs .active {
    color: #fff;
}

.tabs {
    display: flex;
    font-size: 28rpx;
    color: #aaa;
}

.tabs .divider {
    margin: 0 8rpx;
}

.music {
    display: flex;
    flex-direction: column;
    color: #fff;
    font-size: 28rpx;
    box-sizing: border-box;
    padding: 20rpx 40rpx;
    justify-content: space-between;
}

/* .music .album{ 
    flex:1;
} */

.music .album .image {
    width: 100%;
    border-radius: 12rpx;
    margin: 12rpx 0 18rpx;
}

.music .info .name {
    font-size: 48rpx;
    font-weight: 600;
}

.music .info .singer {
    font-size: 30rpx;
    margin-top: 8rpx;
}

.music .lyric {
    text-align: center;
    font-size: 32rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-bottom: 16rpx;
}

.music .progress .slideItem {
    margin: 0rpx 6rpx 10rpx 18rpx;
}

.music .progress .time {
    display: flex;
    justify-content: space-between;
}

.music .control {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 12rpx 0 18rpx;
}

.music .control .btn.mode {
    width: 80rpx;
    height: 80rpx;
}

.music .btn {
    width: 60rpx;
    height: 60rpx;
}

.music .btn.play {
    width: 140rpx;
    height: 140rpx;
}